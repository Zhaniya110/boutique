<h1>{{ article.title }}</h1>
<p>{{ article.author }}</p>
<p>{{ article.content }}</p>

{%  if article.comments_enabled? %}
    <h2>Leave a comment</h2>
    {% form 'new_comment', article %}
        {{ form.errors | default_errors }}

  <div class="name">
    <label for="name">Name</label>
    <input type="text" name="comment[author]" value="{{ form.author }}">
  </div>

  <div class="email">
    <label for="email">Email</label>
    <input type="email" name="comment[email]" value="{{ form.email }}">
  </div>

  <div class="comment">
    <label for="comment">Comment</label>
    <textarea name="comment[body]">{{ form.body }}</textarea>
  </div>

  <div  class="submit bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    <input type="submit" value="Post">
  </div>
       
    {%  endform %}

{% endif %}